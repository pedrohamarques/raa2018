    \newcommand{\showheader}{   
    {\centering
    \section{\wtitle}
    \textbf{\mainauthor} (\mainauthoremail) \\
    \ifx \otherauthors \undefined
    \else
        \otherauthors\\
    \fi
    \vspace{12pt}
    \ifx \wtype \undefined
    \else 
        \textbf{\wtype}
    \fi
    \ifx \course \undefined
        \ifx \wtype \undefined
        \else
            \\
        \fi
    \else
        \ifx \wtype \undefined 
            \course\\
        \else
            , \course\\
        \fi
    \fi
    Duration: \duration 
    \ifx \status \undefined
    \else
        \textrm{} (\status)
    \fi
    \\
    Partners: \partners, Funding: \funding\\}
    \vspace{12pt}
    }
                               
